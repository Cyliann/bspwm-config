[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bars]
;monitor = ${env:MONITOR:HDMI-1}
width = 98%
height = 26
offset-x = 1%
offset-y = 1%
radius = 9.0
fixed-center = true

background = #00000000
foreground = ${colors.foreground}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0 

module-margin-left = 0
module-margin-right = 0

font-0 = DejaVuSans:size=13;2
font-1 = FontAwesome:size=12;2
font-2 = feather:size=12;2
font-3 = iosevka-nerd-font:size=12;0
font-4 = Iosevka Nerd Font:size=16;3
font-5 = Noto Sans CJK JP

separator = ""

;tray-position = right
;tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[bar/mybar]
modules-left = left workspaces separator mpd right
modules-center = left date right
modules-right = left pulseaudio separator network separator specs right
inherit = bars

[module/mpd]
type = internal/mpd
format-online =  <icon-prev>  <icon-stop>  <toggle>  <icon-next>  <label-song>
format-online-background = ${colors.background}

icon-play = ï‹
icon-pause = ïŒ
icon-stop = ï
icon-prev = ïŠ
icon-next = ï

label-song-maxlen = 100
label-song-ellipsis = true
label-active-font = 4

[module/specs]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/specs.sh
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
label-active-font = 3
format-background = ${colors.background}

